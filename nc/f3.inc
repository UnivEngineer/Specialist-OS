F3:         ; Временный выбор противоположной панели
            ld    a, (activePanel)
            push  af
            xor   1
            ld    (activePanel),a

            ; Меняем видимость панели
            ld    hl, panelA_info
            call  readBytePanel
            xor   1
            call  writeBytePanel

            ; Восстанавлаием активную панель
            pop   af
            ld    (activePanel),a
            and   a
            jp z, loc_D701

            ; Перерисовываем панель
            call  loadAndPrintA

            jp    loc_D603

; ---------------------------------------------------------------------------

loc_D701:   call  loadAndPrintB
            jp    loc_D603

