; вход:
;   hl - координаты курсора на панели
;
; 2013-12-18 Дизассемблировано vinxru
;----------------------------------------------------------------------------

setCursorPosPanel:
            ; Сохраняем регистры
            push  hl
            push  af

            ld    a, (state.activePanel)
            and   a
            jp z, loc_D9BA
            ld    a, 96       ; Половина экрана
loc_D9BA:   add   a, h
            ld    h, a
            ld    (bios_vars.cursorY), hl

            ; Восстанавливаем регистры
            pop   af
            pop   hl
            ret

