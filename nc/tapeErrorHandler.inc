tapeErrorHandler:
            ; Восстановление обработчика
            ld    hl, 0C800h
            ld    (bios_vars.tapeError), hl

            ; Восстановление стека
            ld    hl, (vars.savedSP)
            ld    sp, hl

            ; Перезагрузка файлов и продолжение работы
            jp    mainReload

