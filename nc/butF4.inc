but_F4: ; Получение кол-ва файлов
        ld      hl, state.panelA_filesCnt
        call    readBytePanel

        ; Если файлов нет, выходим
        and     a
        jp z,   mainLoop

        ; Запуск редактора
        ld      de, aEditor   ; "A:E.COM\r"
        jp      Enter_5

