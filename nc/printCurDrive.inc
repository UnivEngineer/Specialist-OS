printCurDrive:    ; Узнаем активное устройство
            ld    e, 2
            call  bios_fileGetSetDrive

printDrive: ; Выводим его букву на экран
            add   a, 'A'
            ld    c, a
            call  bios_printChar

            ; Выводим ':'
            ld    c, ':'
            jp    bios_printChar

