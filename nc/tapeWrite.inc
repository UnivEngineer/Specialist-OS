tapeWriteWord:	mov	a, l
		call	tapeWrite
		mov	a, h
		jmp	tapeWrite

;----------------------------------------------------------------------------
; Запись блока данных по адресу HL длиной BC+1 на ленту
;----------------------------------------------------------------------------

tapeWriteBlock:	inx	b
loc_D410:	 call	checkBreak
		 mov	a, m
		 call	tapeWrite
		 inx	h
		 dcx	b
		 mov	a, b
		 ora	c
		jnz	loc_D410
		ret

